<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Drugstore</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!--biblioteca de fontes-->
  </head>
  <body>
    <!--Header-->
    <header id="header">
      <nav>
        <div class="container">
          <div class="text-center">
            <a href="/" class="nav-brand text-dark" style="text-decoration:none">Clientes</a>
          </div>
        </div>
      </nav>
    </header>
    <!--Header-->
    <!--Main-->
    <main id="main">
      <div class="container">
        <div class="box-nav d-flex justify-between">
          <a href="/cadastro" class="border-shadow" style="text-decoration:none">
            <span class="text-gradient" 
              >DrugClient<i class="fa fa-user-circle" aria-hidden="true"></i>
            </span>
          </a>
        </div>
        <div class="form-outline mb-2">        
          <input type="text" class="form-control" id="myInput1" name="buscaNome" placeholder="pesquisar o cliente" onkeyup="buscaNome()">
        </div>      
          <table class="table" id="table">
            <thead class="thead-dark text-light">
              <tr>
                <th>Nome</th>
                <th>Endereço</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>Fone</th>
                <th>Email</th>
                <th>Ação</th>
              </tr>
            </thead>
                  <tbody id="tbody">
                    <% resultado.forEach(item => { %>
                      <tr>
                        <td>
                          <%=item.nome %>
                        </td>
                        <td>
                          <%=item.endereco %>
                        </td>
                        <td>
                          <%=item.bairro %>
                        </td>
                        <td>
                          <%=item.cidade %>
                        </td>
                        <td>
                          <%=item.telefone %>
                        </td>
                        <td>
                          <%=item.email %>
                        </td>
                        <td>
                          <a href="/editar/<%=item._id %>" class="btn border-shadow update">
                            <span class="text-gradient"
                              ><i class="fas fa-pencil alt"></i
                            ></span>
                          </a>
                          <a href="/deletar/<%=item._id %>" class="btn border-shadow delete">
                            <span class="text-gradient"
                              ><i class="fas fa-times-square"></i
                            ></span>
                          </a>
                        </td>
                      </tr>
              </tr>
              <% }) %>
            </tbody>
          </table>
      </div>
    </main>
    <!--Main-->
    <div vw class="enabled">
      <div vw-access-button class="active"></div>
      <div vw-plugin-wrapper>
        <div class="vw-plugin-top-wrapper"></div>
      </div>
    </div>
    <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
    <script>
      new window.VLibras.Widget('https://vlibras.gov.br/app')
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="../search.js"></script>
  </body>
</html>